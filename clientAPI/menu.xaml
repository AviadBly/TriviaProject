<Window x:Class="clientAPI.menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:clientAPI"
        mc:Ignorable="d"
        Title="Trivia Menu" Height="730" Width="565" FontStretch="ExtraExpanded" FontSize="16" Background="#273746">
    <Grid Margin="10,20,20,-16">
       
        
        <Label Content="Israeli Trivia" FontSize="60" Foreground="#85C1E9" HorizontalAlignment="Left" FontStyle="Oblique" FontStretch="UltraCondensed"  FontWeight="bold" Margin="81,-10,0,10" Grid.RowSpan="3" Width="348"/>
        <Button Content="Create Room" Click="clickCreate"  HorizontalAlignment="Left" Margin="10,240,0,0" VerticalAlignment="Top" Height="82" Width="202" FontSize="30" Foreground="#1F618D" Background="#76D7C4" FontWeight="bold"/>
        <Button Content="Join Room" Click="JoinClick" HorizontalAlignment="Left" Margin="336,240,0,0" VerticalAlignment="Top" Height="82" Width="198" FontSize="30"  Background="#76D7C4" Foreground="#1F618D" FontWeight="bold" />
        <Button Content="Statistics" Click="clickStats" HorizontalAlignment="Center" Margin="0,397,0,0" VerticalAlignment="Top" Height="82" Width="240" FontSize="30" Background="#76D7C4" Foreground="#1F618D" FontWeight="bold"/>

        <Button Content="Exit" HorizontalAlignment="Left" Margin="10,578,0,0" VerticalAlignment="Top" Height="82" Width="151" FontSize="30" Click="clickExit"  Background="#76D7C4" Foreground="#1F618D" FontWeight="bold"/>
        <Button Content="Surprise" HorizontalAlignment="Left" Margin="382,578,0,0" VerticalAlignment="Top" Height="82" Width="152" FontSize="30" Click="clickSurprise"  Background="red" Foreground="#1F618D" FontWeight="bold"/>
        <Image Margin="180,78,205,514" Source="/Image1.png" Stretch="Fill"/>

    </Grid>

</Window>
