<Window x:Class="clientAPI.menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:clientAPI"
        mc:Ignorable="d"
        Title="Trivia Menu" Height="800" Width="750" FontStretch="ExtraExpanded" FontSize="16" Background="#273746">
    <Grid Margin="20">
        <Label Content="Israeli Trivia" FontSize="60" Foreground="#85C1E9" HorizontalAlignment="Center" FontStyle="Oblique" FontStretch="UltraCondensed"  FontWeight="bold"/>
        <Button Content="Create Room" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" Height="82" Width="240" FontSize="30" Foreground="#1F618D" Background="#76D7C4" FontWeight="bold"/>
        <Button Content="Join Room" HorizontalAlignment="right" Margin="460,0,0,0" VerticalAlignment="Center" Height="82" Width="240" FontSize="30" Click="Button_Click"  Background="#76D7C4" Foreground="#1F618D" FontWeight="bold"/>
        <Button Content="Statistics" HorizontalAlignment="Center" Margin="0,496,0,0" VerticalAlignment="Top" Height="82" Width="240" FontSize="30" Click="Button_Click"  Background="#76D7C4" Foreground="#1F618D" FontWeight="bold"/>

        <Button Content="Exit" HorizontalAlignment="Left" Margin="15,652,0,0" VerticalAlignment="Top" Height="82" Width="151" FontSize="30" Click="Button_Click"  Background="#76D7C4" Foreground="#1F618D" FontWeight="bold"/>
        <Button Content="Surprise" HorizontalAlignment="Left" Margin="514,652,0,0" VerticalAlignment="Top" Height="82" Width="152" FontSize="30" Click="Button_Click"  Background="red" Foreground="#1F618D" FontWeight="bold"/>
        <Image Margin="206,110,206,484" Source="/Image1.png" Stretch="Fill"/>

    </Grid>

</Window>
