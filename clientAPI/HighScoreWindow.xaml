<Window x:Class="clientAPI.HighScoreWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:clientAPI"
        mc:Ignorable="d"
        Title="HighScoreWindow" Height="400" Width="400">
    <Border Background="Black" CornerRadius="50" Margin="0">
        <StackPanel Margin="20" VerticalAlignment="Stretch">

            <Label Content="Highest Scoring Players!" Foreground="Yellow" FontSize="25" HorizontalAlignment="Center"/>
            <Separator></Separator>
            <Image x:Name="Gold" Height="100" Width="100" Source="/gold medal.jpg"/>
            <Image x:Name="Silver" Height="116" Width="116" Source="/Silver Medal.jpg" RenderTransformOrigin="0.5,0.5" Margin="230,0,0,0"/>
            <Image x:Name="Bronze" Height="122" Width="120" Source="/Bronze Medal.jpg" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
            <TextBlock x:Name="secondPlace" TextWrapping="Wrap" Text="TextBlock" Foreground="#FFFB0000" RenderTransformOrigin="0.5,0.488" Width="148"/>

        </StackPanel>
        
    </Border>
</Window>
