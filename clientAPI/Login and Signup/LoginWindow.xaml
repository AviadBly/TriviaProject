<Window x:Class="clientAPI.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:clientAPI"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="500" FontSize="15" Background="#3b82f5">
    <Border Background="#2e3137" CornerRadius="50" Margin="40,40,40,19">
        <StackPanel Margin="40,40,40,10">

            <Label Content="login" Foreground="White" FontSize="25" HorizontalAlignment="Center"/>
            <Separator></Separator>
            <Label Content="Username" Foreground="white"/>
            <TextBox Name="UsernameText" Background="#545d6a" Foreground="White" FontSize="18" ></TextBox>
            
            <Label Content="Password" Foreground="white"/>
            <PasswordBox Name="PasswordText" Background="#545d6a" Foreground="White" FontSize="18"/>
            <Button x:Name="LoginSubmitButton" Click ="clickLogin" Content="Login" Margin="40" Background="SkyBlue" Height="30" Width="100" />
            <Button Content="Don't have an account?! REGISTER NOW! >:(" Height="34" Width="328" Background="SkyBlue" FontStyle="Oblique" FontWeight="Bold" Click="signClick"/>

        </StackPanel>
    </Border>
</Window>
